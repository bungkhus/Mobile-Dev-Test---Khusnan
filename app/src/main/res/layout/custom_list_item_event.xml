<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="10dp"
        android:id="@+id/text_label_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_title_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="3dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        tools:text="Cristopher OyarzÃºn"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/text_message_email"
        android:layout_alignStart="@+id/text_message_email" />

    <TextView
        android:layout_marginLeft="16dp"
        android:id="@+id/text_message_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_label_email"
        android:layout_below="@id/text_title_email"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        android:paddingBottom="10dp"
        android:fontFamily="sans-serif-light"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingRight="16dp"
        android:lineSpacingExtra="2dp"
        tools:text="Pembimbing 1"/>

    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="16dp"
        android:background="@color/secondary_text"
        android:layout_alignBottom="@+id/text_message_email"
        android:layout_toRightOf="@+id/text_label_email"
        android:layout_toEndOf="@+id/text_label_email" />

</RelativeLayout>