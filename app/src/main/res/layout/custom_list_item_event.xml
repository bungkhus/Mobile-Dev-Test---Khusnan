<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="center"
            android:id="@+id/text_label_email"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/desc" />

        <TextView
            android:id="@+id/text_title_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            tools:text="Cristopher OyarzÃºn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/text_label_email"
            android:layout_toStartOf="@+id/text_label_email"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/text_message_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp"
            android:maxLines="1"
            android:textColor="@color/darkCream"
            android:textSize="13sp"
            tools:text="Tanggal"
            android:layout_below="@+id/text_title_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/text_label_email"
            android:layout_toStartOf="@+id/text_label_email" />

        <LinearLayout
            android:id="@+id/tag_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/text_label_email"
            android:layout_toStartOf="@+id/text_label_email"
            android:layout_below="@+id/text_message_email">

        </LinearLayout>

        <TextView
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:paddingBottom="10dp"
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/secondary_text"
            android:textSize="13sp"
            android:maxLines="4"
            tools:text="Desc"
            android:layout_below="@+id/tag_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/text_label_email"
            android:layout_toStartOf="@+id/text_label_email"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
